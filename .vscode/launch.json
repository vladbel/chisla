    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python",
            "type": "python",
            "request": "launch",
            "envFile": "${workspaceRoot}/.env",
            "program": "${file}"
        },
        {
            "name": "Python: Terminal (integrated)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python (obsolete)",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "python": "${workspaceRoot}/chisla_env/bin",
            "program": "${file}",
            "cwd": "${workspaceRoot}",
            "env": {},
            "envFile": "${workspaceRoot}/.env",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }   
    ]
}